<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:icon="@null"
        android:key="@string/pref_user_name"
        android:summary="@string/username"
        android:title="@string/user" />

    <Preference
        android:icon="@null"
        android:key="@string/pref_base_currency"
        android:title="@string/base_currency" />

    <ListPreference
        android:icon="@null"
        android:key="@string/pref_default_account"
        android:title="@string/default_account" />

    <ListPreference
        android:icon="@null"
        android:defaultValue="%y-%m-%d"
        android:entries="@array/date_format"
        android:entryValues="@array/date_format_mask"
        android:key="@string/pref_date_format"
        android:title="@string/date_format" />

    <EditTextPreference
        android:icon="@null"
        android:key="@string/pref_financial_year_start_date"
        android:title="@string/financial_year_start_day" />

    <ListPreference
        android:icon="@null"
        android:key="@string/pref_financial_year_start_month"
        android:title="@string/financial_year_start_month" />

    <Preference
        android:icon="@null"
        android:key="@string/pref_attachment_folder"
        android:title="@string/attachment_folder"
        android:summary="@string/attachment_folder_summary" />
</PreferenceScreen>