<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:divider="?android:attr/dividerVertical"
              android:dividerPadding="12dip"
              android:orientation="horizontal"
              android:showDividers="middle"
              android:layout_gravity="right">

    <!-- id must match corresponding menu item id -->

    <LinearLayout
        android:id="@+id/action_cancel"
        style="@style/EditEventCustomActionButton"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_cancel"
            style="@style/EditEventCustomActionButtonImage"
            android:src="?attr/ic_action_cancel"/>

        <TextView
            android:id="@+id/text_cancel"
            style="@style/EditViewCustomActionButtonText"
            android:text="@android:string/cancel"/>
    </LinearLayout>

    <!-- id must match corresponding menu item id -->

    <LinearLayout
        android:id="@+id/action_search"
        style="@style/EditEventCustomActionButton"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_done"
            style="@style/EditEventCustomActionButtonImage"
            android:src="?attr/ic_action_search"/>

        <TextView
            android:id="@+id/text_done"
            style="@style/EditViewCustomActionButtonText"
            android:text="@android:string/search_go"/>
    </LinearLayout>

</LinearLayout>