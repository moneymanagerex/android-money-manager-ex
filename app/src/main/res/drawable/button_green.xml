<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/GreenButtonStartColor" android:startColor="@color/GreenButtonEndColor" />

            <stroke android:width="1dp" android:color="@color/GreenButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/GreenButtonEndColor" android:startColor="@color/GreenButtonStartColor" />

            <stroke android:width="1dp" android:color="@color/GreenButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/GreenButtonDisabledEndColor" android:startColor="@color/GreenButtonDisabledStartColor" />

            <stroke android:width="1dp" android:color="@color/GreenButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/GreenButtonEndColor" android:startColor="@color/GreenButtonStartColor" />

            <stroke android:width="1dp" android:color="@color/GreenButtonBorderColor" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="10dp" />
        </shape></item>

</selector>
