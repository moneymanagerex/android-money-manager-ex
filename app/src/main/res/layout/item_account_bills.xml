<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeightSmall"
              android:minHeight="?attr/listPreferredItemHeightSmall"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingRight="6dp"
    android:paddingEnd="6dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_money_safe" />

        <com.money.manager.ex.view.RobotoTextView
            android:id="@+id/textViewItemAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/account_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.money.manager.ex.view.RobotoTextView
            android:id="@+id/textViewItemAccountTotal"
            android:text="@string/amount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <com.money.manager.ex.view.RobotoTextView
            android:id="@+id/textViewItemAccountTotalReconciled"
            android:text="@string/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0"
            android:textSize="@dimen/mmx_text_view_size_micro"/>
    </LinearLayout>

</LinearLayout>