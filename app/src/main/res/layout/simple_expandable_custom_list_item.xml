            <!--android:layout_marginTop="6dip"-->
            <!--android:checkMark="?android:attr/listChoiceIndicatorMultiple"-->
            <!--android:textAlignment="viewStart"-->
            <!--android:layout_gravity="start"-->
            <!--android:textAppearance="?android:attr/textAppearanceListItem" />-->

        <TextView
            android:id="@android:id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_marginStart="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_gravity="start"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <com.shamanland.fonticon.FontIconView
        android:id="@+id/caretView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="o"
        android:textSize="@dimen/fonticon_drawer"
        android:textColor="@color/md_accent" />

</LinearLayout>